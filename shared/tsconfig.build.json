{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2020"],
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "declaration": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
